<div class="card">
  <h1>Login</h1>
  <div class="cardContainer">
    {{> message}}
    <form action="/users/login" method="POST">
      <div class="ok">
        <div class="inputBlock">
          <label for="email">Email</label>
          <input class="inputField" type="email" id="email" name="email" placeholder="Enter Email" required>
        </div>
        <div class="inputBlock">
          <label for="password">Password</label>
          <input class="inputField" type="password" id="password" name="password" placeholder="Enter Password" required>
        </div>
      </div>
      <div class="btnWrapper">
        <input class="inputBtn" type="submit" value="Login">
        <a class="fb" href="/auth/facebook">Facebook</a>
        <p class="otherOption">
          No account? <a class="remind_msg" href="/users/register">Register</a>
        </p>
      </div>
    </form>
  </div>
</div>